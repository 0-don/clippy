{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "clippy",
  "version": "1.3.0",
  "identifier": "clippy",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true,
    "trayIcon": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": true
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "clippy",
        "alwaysOnTop": true,
        "visible": false,
        "decorations": false,
        "transparent": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"],
    "linux": {
      "deb": {
        "depends": ["libxdo3"]
      },
      "rpm": {
        "depends": ["xdotool"]
      }
    }
  }
}
